<apex:page standardController="Effort_Information__c" extensions="myUserstoryController">

    <apex:form id="theForm">

        <apex:pageBlock id="thePageBlock">

            <apex:pageBlockTable value="{!EffortInfoRecord}" var="record" id="thePageBlockTable">

                <apex:column >

                    <apex:outputField value="{!record.Effort_on_Date__c}" id="AccountNameDOM"  />
                    
                    
                    <apex:facet name="header">Name</apex:facet>

                </apex:column>
                
                <apex:column >

                    <apex:outputField value="{!record.User_Story__r.Total_Effort_Covered__c}" />
                    
                    
                    <apex:facet name="header">Name 1</apex:facet>

                </apex:column>
                
                <apex:inlineEditSupport event="ondblClick"

                        showOnEdit="saveButton,cancelButton" hideOnEdit="editButton" />

            </apex:pageBlockTable>

            <apex:pageBlockButtons >

                <apex:commandButton value="Edit" action="{!save}" id="editButton" style="display: none;"/>

                <apex:commandButton value="Save" action="{!save}" id="saveButton" style="display: none;"/>

                <apex:commandButton value="Cancel" action="{!cancel}" id="cancelButton" style="display: none;"/>

            </apex:pageBlockButtons>

        </apex:pageBlock>

    </apex:form>
  
    
    

</apex:page>